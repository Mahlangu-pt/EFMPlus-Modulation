 		    EFM_Encoder1_Data[s]= Encoder(temp1[s]);
 //		    To_String(buffer, EFM_Encoder1_Data[s]);
 //		    TM_ILI9341_Puts(10, 60, buffer, &TM_Font_7x10, ILI9341_COLOR_BLACK, ILI9341_COLOR_WHITE);
 		} // end Receiver FOR LOOP

