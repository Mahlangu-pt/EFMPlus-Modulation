	TM_ILI9341_Puts(10, 80, "2. Convolutional Encoder :", &TM_Font_7x10, ILI9341_COLOR_BLACK, ILI9341_COLOR_WHITE);
	TM_ILI9341_Puts(10, 130, "3. EFMPlus Encoder 2 :", &TM_Font_7x10, ILI9341_COLOR_BLACK, ILI9341_COLOR_WHITE);
